@model Beatss.ViewModels.NewUserViewModel
@Styles.Render("~/Content/LogCss")
<title>Beats-Login</title>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Check", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="container">
                    <div class="sign_up_form">
                        <div class="sign_up">
                            <h3>Sign in</h3>
                        </div>
                        @Html.TextBoxFor(b => b.user.Email, new { @class = "", placeholder = "E-mail" })
                        @Html.ValidationMessageFor(b => b.user.Email, "", new { @class = "text-danger" })

                        @Html.PasswordFor(b => b.user.Password, new { @class = "", placeholder = "Password" })
                        @Html.ValidationMessageFor(b => b.user.Password, "", new { @class = "text-danger" })

                        @Html.HiddenFor(m => m.user.id)
                        <button class="btn" type="submit">Submit</button>
                        <div class="log">Don't have an account?<span><a href="https://localhost:44306/User/Register">Sign up</a></span>.</div>
                    </div>
                </div>
            }
        </section>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}